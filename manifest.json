{
  "manifest_version": 3,
  "version": "2",
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "browser_specific_settings": {
    "gecko": {
      "id": "{8be5accd-4b22-4d70-9beb-05455a7ea9e0}",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/YouTubeMonoSound32.png",
    "32": "icons/YouTubeMonoSound32.png",
    "48": "icons/YouTubeMonoSound48.png",
    "128": "icons/YouTubeMonoSound128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://music.youtube.com/*"
  ],
  "action": {
    "default_icon": "icons/YouTubeMonoSound.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ],
      "css": ["styles/styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["_locales/*/*.json"],
      "matches": ["https://www.youtube.com/*", "https://music.youtube.com/*"]
    }
  ]
}