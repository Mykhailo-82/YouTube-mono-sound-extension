{
  "manifest_version": 3,
  "name": "YouTube Mono Sound",
  "version": "1.1",
  "description": "Перемикач моно/стерео для YouTube",
  "icons": {
    "16": "/icons/YouTubeMonoSound.png",
    "32": "/icons/YouTubeMonoSound.png",
    "48": "/icons/YouTubeMonoSound.png",
    "128": "/icons/YouTubeMonoSound.png"
  },
  "permissions": ["scripting", "storage"],
"host_permissions": [
  "https://www.youtube.com/*",
  "https://music.youtube.com/*"
],
  "action": {
    "default_icon": "/icons/YouTubeMonoSound.png",
    "default_popup": "/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ],
      "css": ["styles/styles.css"],
      "js": ["browser-polyfill.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["locales/*.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
